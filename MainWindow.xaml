<Window x:Class="WPF_Labs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Labs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Background="LightBlue">
        <Label Content="Label" Canvas.Left="20" Canvas.Top="20" />
        <TextBox Text="Text" Canvas.Left="40" Canvas.Top="40" Width="30" Height="20" />
        <Button Content="Button" Canvas.Left="60" Canvas.Top="60" Width="40" Height="30" />
    </Canvas>
</Window>
