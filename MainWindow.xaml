<Window x:Class="WPF_Labs.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="1" CornerRadius="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button ToolTip="Відкрити">
                    <Image Source="images/1.png" Width="30" Height="30"/>
                </Button>
                <Button ToolTip="Стерти">
                    <Image Source="images/2.png" Width="30" Height="30"/>
                </Button>
                <Button ToolTip="Копіювати">
                    <Image Source="images/3.png" Width="30" Height="30"/>
                </Button>
                <Button ToolTip="Вставити">
                    <Image Source="images/4.png" Width="30" Height="30"/>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10">
            <Grid Margin="10">
                <TextBox Grid.Row="0" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto" />

                <DockPanel Grid.Row="1" VerticalAlignment="Bottom">
                    <Button DockPanel.Dock="Right" Content="ОК"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
